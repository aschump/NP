@model IEnumerable<NP.Models.CategoryBuildList>
@using NP.Data
@{
    ViewBag.Title = "Category";
}

<h2>View By Category</h2>

@*<p>
        @Html.ActionLink("Create New", "Create")
    </p>*@
@using (Html.BeginForm("Category", "Product"))
{
    <div class="input-group">
        @Html.DropDownList("Category", EnumHelper.GetSelectList(typeof(Category)), "Select Category", new { @class = "form-control" })
    </div>
    <input type="submit" value="Select" class="input-group-addon btn-block" />

}
<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

    @if (Model == null)
    {
        Console.WriteLine("No Items Found");
    }
    else
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new {  id=item.ProductID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ProductID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ProductID })
                </td>
            </tr>
        }
    }

</table>

